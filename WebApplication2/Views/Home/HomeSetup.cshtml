
@{
    ViewBag.Title = "HomeSetup";
}

<script type="text/javascript">
    $(window).load(function () {
        $(".se-pre-con").fadeOut("slow");;
    });
</script>

<style>
    .carddemoBasicUsage .card-media {
        background-color: #999999;
    }
</style>

<h1 class="display-1" style="text-align:center">
    Setup
    <small class="text-muted">Config</small>
</h1>

<hr />


<div layout="row">
    @*Setup form for new project*@
    <div flex="66" flex-offset="10">
        <div ng-controller="HomeSetupCtrl" layout="column" ng-cloak="" class="md-inline-form">
            <md-content class="md-whiteframe-5dp" md-theme="docs-dark" layout-gt-sm="row" layout-padding="">
                <div>
                    <md-input-container>
                        <label>Username</label>
                        <input ng-model="setup.username" required>
                    </md-input-container>

                    <md-input-container>
                        <label>Project</label>
                        <input ng-model="setup.project" required>
                    </md-input-container>

                    <md-input-container>
                        <label>Client</label>
                        <input ng-model="setup.client" type="text" required>
                    </md-input-container>
                </div>
            </md-content>

            <md-content layout-padding="" class="md-whiteframe-5dp">
                <div>
                    <form name="userForm">

                        <div layout-gt-xs="row">
                            <md-input-container class="md-block" flex-gt-xs="">
                                <label>Company (Disabled)</label>
                                <input ng-model="setup.company" disabled="">
                            </md-input-container>
                            <md-input-container>
                                <label>Start date</label>
                                <md-datepicker ng-model="setup.startdate" required></md-datepicker>
                            </md-input-container>
                        </div>

                        <div layout-gt-sm="row">
                            <md-input-container class="md-block" flex-gt-sm="">
                                <label>Database</label>
                                <input ng-model="setup.database" required>
                            </md-input-container>
                            <md-input-container class="md-block" flex-gt-sm="">
                                <label>Mode</label>
                                <md-select ng-model="setup.leveloption" required>
                                    <md-option ng-repeat="leveloption in leveloptions" value="{{leveloption.abbrev}}">
                                        {{leveloption.abbrev}}
                                    </md-option>
                                </md-select>
                            </md-input-container>
                        </div>
                        <md-input-container class="md-block">
                            <label>Notes</label>
                            <textarea ng-model="setup.notes" md-select-on-focus=""></textarea>
                        </md-input-container>

                        <section layout-gt-sm="row">
                            <md-input-container>
                                <md-button class="md-raised" ng-click="autofill()">AutoFill</md-button>
                            </md-input-container>
                            <md-input-container>
                                <md-button class="md-raised" ng-click="clear()">Clear</md-button>
                            </md-input-container>
                            <md-input-container>
                                <md-button class="md-raised" href="#ModeSetup/{{setup.leveloption}}" ng-disabled="userForm.$invalid">Start</md-button>
                            </md-input-container>
                        </section>

                    </form>
                </div>
            </md-content>

        </div>
    </div>

    @*Continue saved projects option - not in use yet*@
    <div flex>
        <div layout="column">
            <div flex-xs="" flex-gt-xs="50" layout="column"  layout-padding="left: 10px" >
                <md-card class="md-whiteframe-4dp">
                    <md-card-title>
                        <md-card-title-text>
                            <span class="md-headline">Project1</span>
                            <span class="md-subhead">Date</span>
                        </md-card-title-text>
                        <md-card-title-media>
                            <div class="md-media-sm card-media"></div>
                        </md-card-title-media>
                    </md-card-title>
                    <md-card-actions layout="row" layout-align="end center">
                        <md-button>Open</md-button>
                    </md-card-actions>
                </md-card>
                <md-card class="md-whiteframe-4dp">
                    <md-card-title>
                        <md-card-title-text>
                            <span class="md-headline">Project2</span>
                            <span class="md-subhead">Date</span>
                        </md-card-title-text>
                        <md-card-title-media>
                            <div class="md-media-md card-media"></div>
                        </md-card-title-media>
                    </md-card-title>
                    <md-card-actions layout="row" layout-align="end center">
                        <md-button>Open</md-button>
                    </md-card-actions>
                </md-card>
                <md-card class="md-whiteframe-4dp">
                    <md-card-title>
                        <md-card-title-text>
                            <span class="md-headline">Project3</span>
                            <span class="md-subhead">Date</span>
                        </md-card-title-text>
                        <md-card-title-media>
                            <div class="md-media-md card-media"></div>
                        </md-card-title-media>
                    </md-card-title>
                    <md-card-actions layout="row" layout-align="end center">
                        <md-button>Open</md-button>
                    </md-card-actions>
                </md-card>
                <md-card class="md-whiteframe-4dp">
                    <md-card-title>
                        <md-card-title-text>
                            <span class="md-headline">Project4</span>
                            <span class="md-subhead">Date</span>
                        </md-card-title-text>
                        <md-card-title-media>
                            <div class="md-media-md card-media"></div>
                        </md-card-title-media>
                    </md-card-title>
                    <md-card-actions layout="row" layout-align="end center">
                        <md-button>Open</md-button>
                    </md-card-actions>
                </md-card>
            </div>
        </div>
    </div>
</div>
