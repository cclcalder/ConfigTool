<UserControl x:Class="Exceedra.TreeGrid.Controls.TextBlockWithIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Exceedra.TreeGrid.Controls"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             x:Name="This"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBlock TextAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="InnerText" VerticalAlignment="Center" />
            <fa:FontAwesome VerticalAlignment="Center" x:Name="Icon" Foreground="#5cb85c" FontSize="11"/>
        </TextBlock>
    </Grid>
</UserControl>
